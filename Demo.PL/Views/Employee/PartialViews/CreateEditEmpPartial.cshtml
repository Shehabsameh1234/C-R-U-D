@model EmpViewModel
@{
    ViewData["department"] = _unitOfWork.DepartmentRepository.GetAll();
    var department = new SelectList(ViewData["department"] as IEnumerable<Department>,nameof(Department.Id),nameof(Department.Name));
}
@inject IunitOfWork _unitOfWork;

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input type="number" asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input type="text" asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input type="number" asp-for="Salary" class="form-control" />
</div>
<div class="form-check ">
    <input type="checkbox" asp-for="IsActive" class="form-check-input" />
    <label class="form-check-label h5" asp-for="IsActive"></label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input type="email" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input type="number" asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="-from-group mb-3">
    <label class="col-from-label" asp-for="Department"></label>
    <select class="form-control" asp-items="@department" asp-for="DepartmentId">
       <option value="@null">--No Department--</option>
    </select>
</div>
<div class="form-group" >
    <label class="col-form-label" asp-for="Image" >image</label>
    <input accept="image/png, image/gif, image/jpeg" class="form-control-file mb-3" asp-for="Image" />
    @if (!string.IsNullOrEmpty(ViewData["messege"]as string))
    {
        <span class="alert alert-danger mt-5">@ViewData["messege"]</span>
    }  
</div>
   