@model EmpViewModel
@{
    ViewData["department"] = _unitOfWork.DepartmentRepository.GetAll();

    var department = new SelectList(ViewData["department"] as IEnumerable<Department>, nameof(Department.Id), nameof(Department.Name));
}
@inject IunitOfWork _unitOfWork;


<div class="text-center" >
    <img src="~/Files/Images/@Model.ImageName" class="image-size-200 "  />
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input type="text" asp-for="Name" class="form-control" readonly />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input type="number" asp-for="Age" class="form-control" readonly />

</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input type="text" asp-for="Address" class="form-control" readonly />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input type="number" asp-for="Salary" class="form-control" readonly    />
</div>
<div class="form-check ">
    <input type="checkbox" disabled asp-for="IsActive" class="form-check-input" readonly />
    <label class="form-check-label h5 " asp-for="IsActive"></label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input type="email" asp-for="Email" class="form-control" readonly />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input type="number" asp-for="PhoneNumber" class="form-control" readonly />

</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input asp-for="HireDate" class="form-control" readonly />
</div>

<div class="-from-group mb-3">
    <label class="col-from-label" asp-for="Department" ></label>
    <select disabled id="selectID" class="form-control" asp-items="@department" asp-for="DepartmentId" >
        <option   value="@null">--select department--</option>
    </select>
</div>

 
