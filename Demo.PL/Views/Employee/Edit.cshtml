
@model EmpViewModel
@{
    ViewData["Title"] = "Edit";
    
}

<h1 class="my-3">Edit Employee</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <partial name="PartialViews/CreateEditEmpPartial" />
    <div class="form-group">
        <label class="col-form-label" asp-for="HireDate"></label>
        <input type="date" asp-for="HireDate" class="form-control" value="@Model.HireDate.Date.ToString("yyyy-MM-dd")" />
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Cancel</a>

</form>


@section ValidationScript {
    <partial name="_ValidationScriptsPartial" />
}

