@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";

}
@if (TempData["delete"] != null)
{
    <div class="text-center">
        <span class="alert alert-danger col-8 mt-1 ">@TempData["delete"]</span>
   </div>
}
<h1 class="my-3">All Users</h1>


@if (Model?.Count() > 0)
{

    <div class="row justify-content-center align-items-center mt-5 ">
        <form class="row w-100 text-center " asp-action="Index">
            <div class="d-flex col-12 ">
                <input type="text" class="form-control" name="SearchInp" placeholder="Search By Email" />
                <input type="submit" value="@ViewData["InnerBtn"]" class="btn btn-success mx-2" />
            </div>
        </form>
        @if (ViewData["message"] != null)
        {
            <span class="alert alert-danger col-8 mt-1 text-center">@ViewData["Message"]</span>
        }
    </div>
    <table class="table  mt-3 table-striped table-hover table-responsive-sm ">
        <thead>
            <tr>
  
                <th>@Html.DisplayNameFor(E => E.Id)</th>
                <th>@Html.DisplayNameFor(E => E.UserName)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>Deatails</th>
                <th>update</th>
                <th>delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>

                    <partial model="user.Id.ToString()" name="_ButtonsPartial" />
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="mt-5 alert alert-warning">
        <h3>there is no Users</h3>
    </div>
}





