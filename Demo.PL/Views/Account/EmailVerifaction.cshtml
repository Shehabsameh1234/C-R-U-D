@model EmailVerify
@{
    ViewData["Title"] = "EmailVerifaction";
    Layout = "~/Views/Shared/EmailVerifactionLayout.cshtml";
}

<h1 class="text-center text-success mt-5">Email Verifaction</h1>
<h4 class="text-center">please enter the code that we sent to your email</h4>

<form asp-action="EmailVerifaction" method="post">
    <div class="text-center d-flex mb-3">
        <input type="number" class="form-control" asp-for="Code" placeholder="Enter Code" />
        <input type="submit" value="submit" class="btn btn-success mx-2" />
    </div>
   <div>
        <span asp-validation-for="Code" class="text-danger "></span>
   </div>

</form>