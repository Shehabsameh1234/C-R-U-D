@model LogInViewModel
@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="LogIn" method="post">
			<div asp-validation-summary="All" class="text-light text-center" ></div>
			<input class="text my-4" asp-for="Email" placeholder="Email" required="">
			<input class="text my-4 " asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text mt-4 ">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox" >
					<span>Remember me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="LogIn">
		</form>
		<p>Do you have an Account? <a asp-action="SignUp"> Sign up Now!</a></p>
		<p><a asp-action="ForgetPassword">forget password</a></p>

	</div>
</div>
@section ValidationScript {
	<partial name="_ValidationScriptsPartial" />
}

